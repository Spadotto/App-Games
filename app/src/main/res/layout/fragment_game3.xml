<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".games.Game3Fragment">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="368dp"
        android:layout_height="384dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tvScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTime">

        <ImageView
            android:id="@+id/ivApple"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/apple" />

        <ImageView
            android:id="@+id/ivBanana"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/bananas" />

        <ImageView
            android:id="@+id/ivCherry"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/cherry" />


        <ImageView
            android:id="@+id/ivGrapes"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/grapes" />

        <ImageView
            android:id="@+id/ivKiwi"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/kiwi" />

        <ImageView
            android:id="@+id/ivPear"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/pear" />

        <ImageView
            android:id="@+id/ivOrange"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/orange" />

        <ImageView
            android:id="@+id/ivWatermelon"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/watermelon" />

        <ImageView
            android:id="@+id/ivStrawberry"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/strawberry" />


    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:text="Time : 10"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="Score : 0"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/restartButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.582"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <Button
        android:id="@+id/restartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/bestTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best Score: "
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/restartButton"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="16dp"
        />

</android.support.constraint.ConstraintLayout>