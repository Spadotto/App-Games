<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/welcomeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/teal_700"
        />

    <TextView
        android:id="@+id/game1TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tic Tac Toe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeTV"
        android:layout_marginTop="60dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/teal_700"
        />

    <TextView
        android:id="@+id/game1winsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wins: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game1TV"
        app:layout_constraintEnd_toStartOf="@id/game1TV"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/game1drawsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Draws: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game1TV"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/game1deathsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Deaths: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/game1TV"
        app:layout_constraintTop_toBottomOf="@id/game1TV"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/game2TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Memory Game"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game1deathsTV"
        android:layout_marginTop="60dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/teal_700"
        />

    <TextView
        android:id="@+id/game2winsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best Score: 20 clicks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game2TV"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/game2deathsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Last Score: 20 clicks"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toStartOf="@id/game2TV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game2winsTV"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/game3TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catch the Fruits"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game2deathsTV"
        android:layout_marginTop="60dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/teal_700"
        />

    <TextView
        android:id="@+id/game3winsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best Score: 20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game3TV"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/game3deathsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Last Score: 20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/game3TV"
        android:textSize="20sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>